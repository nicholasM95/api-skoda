{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "assignees": [
    "nicholasM95"
  ],
  "baseBranches": [
    "develop"
  ],
  "packageRules": [
    {
      "matchFileNames": [".github/workflows/**"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchFileNames": ["infra/prod/**"],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}